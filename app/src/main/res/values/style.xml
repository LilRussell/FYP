<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/custom_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/gradient_blue</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>

    </style>
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the background color here -->
        <item name="android:background">@color/cardColor</item> <!-- Use your desired color code -->
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>

    </style>
    <style name="CustomButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Text color for the positive button (e.g., "Yes") -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Set the background color for the toolbar -->
        <item name="android:background">@color/status_bar_color</item> <!-- Replace with your desired color code -->
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/cardColor</item> <!-- Set your desired background color -->
        <item name="android:textColor">@color/black</item> <!-- Set your desired text color for menu items -->
    </style>
</resources>