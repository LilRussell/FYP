<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/cardColor"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="407dp"
        android:layout_height="235dp">

        <ImageView
            android:id="@+id/IV_Parking1"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />

        <ImageView
            android:id="@+id/IV_Parking2"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />

        <ImageView
            android:id="@+id/IV_Parking3"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />


        <TextView
            android:id="@+id/txt_card"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradient_brown"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:shadowColor="#808080"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="3"

            android:text="TextView"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_status"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"

            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:shadowColor="#808080"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="3"
            android:text="TextView"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/IV_bottomline"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginBottom="-5dp"
            app:srcCompat="@drawable/gradient_yellow" />

        <Button
            android:id="@+id/btn_parked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="-5dp"
            android:background="@drawable/cancel_btn"
            android:text="@string/i_ve_parked_here" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>