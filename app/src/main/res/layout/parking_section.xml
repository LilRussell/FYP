<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="284dp">

        <EditText
            android:id="@+id/editPillarName"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="230dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/pillar_number" />

        <Spinner
            android:id="@+id/spinner_camera"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="241dp" />

        <TextView
            android:id="@+id/txtParking1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="193dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtParking2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="196dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtParking3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="59dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/IV_Parking1"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />

        <ImageView
            android:id="@+id/IV_Parking2"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />

        <ImageView
            android:id="@+id/IV_Parking3"
            android:layout_width="106dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/image_na" />

        <Button
            android:id="@+id/btn_chg_parking1"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="18dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/btn_chg_parking2"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="148dp"
            android:layout_marginBottom="18dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/btn_chg_parking3"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="270dp"
            android:layout_marginBottom="18dp"
            android:text="@string/edit" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>